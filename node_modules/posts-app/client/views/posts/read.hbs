<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel="stylesheet" href="../../assets/styles/read.css">
    <title>Document</title>
  </head>
  <br>
  <article>
    <h1>{{post.title}}</h1>
    <p>{{post.content}}</p>
    <span>Writed by: {{user.name}}</span>
    </article>
    <dl>
    {{#each comments}}
    {{#if this.commentId}}
      <dd>{{this.comment}} <span data-commentid={{this.id}} class="replyComment">Reply</span></dd>
    {{else}}
      <dt>{{this.comment}} <span data-commentid={{this.id}} class="replyComment">Reply</span></dt>
    {{/if}}        
    {{/each}}
    </dl>
    <div>
      <form action="" method='post' id="createCommentForm">
        <input type="hidden" name="postId" value={{post.id}}>
        <textarea name="comment" id="" cols="30" rows="5" style="resize: none;"></textarea>
        <button>Submit</button>
      </form>
    </div>
